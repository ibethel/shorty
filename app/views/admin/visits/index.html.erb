<h1><%= short_url @short %> <span class="small"><%= link_to "edit", edit_admin_short_path(@short) %></span></h1>

<div id="short-stats">
	<h2><%= @short.title %></h2>
	<table>
		<thead>
			<tr>
				<th><%= @visits.count %></th>
				<td>Total Clicks</td>
			</tr>
			<tr>
				<th><%= @uniques %></th>
				<td>Unique Referrers</td>
			</tr>
		</thead>
		<tbody>
			<tr>
				<th>Long Link</th>
				<td><%= link_to @short.expanded, @short.expanded, target: "_blank" %></td>
			</tr>
		</tbody>
	</table>
</div>

<h3>Traffic</h3>
<div id="tabs">
	<ul>
		<li><a href="#clicks">Clicks</a></li>
		<li><a href="#referrers">Referrers</a></li>
	</ul>
	<div id="clicks">
		<h3>Last <%= pluralize(@clicks_per_day.count, "day")%> traffic</h3>
		<table class="bar_chart">
			<thead>
				<tr>
					<th>Date</th>
					<th>Clicks</th>
				</tr>
			</thead>
			<tbody>
				<% @clicks_per_day.each do |name, val| %>
				<tr>
					<th scope="row"><%= l name.to_date, format: :long %></th>
					<td><%= val.to_i %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
	<div id="referrers">
		<h3>Top <%= pluralize(@referrers.count, "Referrer") %></h3>
		<table>
			<thead>
				<tr>
					<th>Referrer</th>
					<th>Count</th>
				</tr>
			</thead>
			<tbody>
				<% @referrers.each do |name, val| %>
				<tr>
					<th scope="row" style="word-wrap: break-word;"><%= name %></th>
					<td><%= val.to_i %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>
